<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hydrofarm_categories_tree_view">
            <field name="name">hydrofarm.categories.tree</field>
            <field name="model">hydrofarm.categories</field>
            <field name="arch" type="xml">
                <tree string="Categories">
                    <field name="categories_ids"/>
<!--                    <field name="partner"/>-->
                </tree>
            </field>
        </record>
        <!-- Form view-->
        <record id="hydrofarm_categories_form_view" model="ir.ui.view">
            <field name="name">hydrofarm.categories.form</field>
            <field name="model">hydrofarm.categories</field>
            <field name="arch" type="xml">
                <form string="Categories">
                    <header>
                        <button type="object" class="oe_highlight" string="Fetch Categories" name="fetch_hydro_categories"/>
                    </header>
                    <sheet>
                        <group>
<!--                            <group>-->
<!--                                <field name="message" readonly="1"/>-->
<!--                                <field name="name"/>-->
<!--                            </group>-->
<!--                            <group>-->
<!--                                <field name="partner" domain="[('is_api_vendor', '=', True)]"/>-->
<!--                            </group>-->
                        </group>
                        <notebook>
                            <page name="categories" string="Categories">
                                <field name="categories_ids" readonly="1">
                                    <tree>
                                        <field name="categ_id" readonly="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="shortName" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                        <field name="activity_ids" widget="mail_activity"/>-->
<!--                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>-->
<!--                    </div>-->
                </form>

            </field>
        </record>


         <record model="ir.actions.act_window" id="action_hydrofarm_categories">
            <field name="name">HydroFarm Categories</field>
            <field name="res_model">hydrofarm.categories</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Integration sub-menus -->
        <menuitem id="menu_hydrofarm_categories" name="HydroFarm Categories"
                  action="action_hydrofarm_categories"
                  parent="menu_integration" sequence="1"/>



    </data>
</odoo>